{
  "name": "curriculum-digital",
  "version": "1.0.0",
  "description": "Portfolio profesional moderno y responsivo",
  "main": "index.html",
  "scripts": {
    "start": "live-server --port=3000 --open=/index.html",
    "build": "npm run minify-css && npm run minify-js",
    "minify-css": "cleancss -o dist/styles.min.css styles/main.css styles/animations.css styles/responsive.css",
    "minify-js": "uglifyjs js/main.js js/animations.js -o dist/scripts.min.js",
    "serve": "http-server -p 8080",
    "deploy": "gh-pages -d ."
  },
  "keywords": [
    "portfolio",
    "curriculum",
    "web-developer",
    "responsive",
    "html5",
    "css3",
    "javascript"
  ],  "author": "Alex Mart√≠nez",
  "license": "MIT",
  "devDependencies": {
    "live-server": "^1.2.2",
    "clean-css-cli": "^5.6.2",
    "uglify-js": "^3.17.4",
    "http-server": "^14.1.1",
    "gh-pages": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tu-usuario/curriculum-digital.git"
  },
  "homepage": "https://tu-usuario.github.io/curriculum-digital"
}
